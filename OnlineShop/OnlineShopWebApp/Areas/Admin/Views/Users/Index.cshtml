@using OnlineShopWebApp.Models.Users
@model List<User>
<div class="card">
    <div class="card-header text-center">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a asp-area="admin" asp-controller="orders" asp-action="index" class="nav-link">Заказы</a>
            </li>
            <li class="nav-item">
                <a asp-area="admin" asp-controller="products" asp-action="index" class="nav-link">Товары</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="true">Пользователи</a>
            </li>
            <li class="nav-item">
                <a asp-area="admin" asp-controller="roles" asp-action="index" class="nav-link">Роли</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Логин</th>
                        <th scope="col">Роль</th>
                        <th scope="col"/>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <th scope="row">@user.Id</th>
                            <td>@user.Login</td>
                            <td>@user.Role.Name</td>
                            <td>
                                <a asp-area="admin" asp-controller="users" asp-action="showUser" asp-route-userId="@user.Id" class="btn btn-outline-info">
                                    Редактировать
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h2>Пока нет пользователей</h2>
        }
        <div class="text-lg-start">
            <a asp-area="admin" asp-controller="users" asp-action="create" class="btn btn-outline-dark">
                Создать пользователя
            </a>
        </div>
    </div>
</div>