@using OnlineShopWebApp.Models.Roles
@model RoleViewModel
<div class="card">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a asp-area="admin" asp-controller="orders" asp-action="index" class="nav-link">Заказы</a>
            </li>
            <li class="nav-item">
                <a asp-area="admin" asp-controller="products" asp-action="index" class="nav-link">Товары</a>
            </li>
            <li class="nav-item">
                <a asp-area="admin" asp-controller="users" asp-action="index" class="nav-link">Пользователи</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="true">Роли</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        @await Component.InvokeAsync("Roles")
        <form method="post">
            <div class="row">
                <div class="col-10 mb-3">
                    <label asp-for="Name" class="form-label">Название роли</label>
                    <div class="row">
                        <div class="col-5">
                            <input asp-for="Name" class="form-control" id="inputName" aria-describedby="nameHelp">
                        </div>
                        <div class="col-3 m-0">
                            <button asp-area="admin" asp-controller="roles" asp-action="index" type="submit" class="btn btn-outline-success">Добавить</button>
                        </div>
                    </div>
                    <span asp-validation-for="Name" class="validation-error"></span>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="validation-error"></div>
        </form>
    </div>
</div>
