@using OnlineShopWebApp.Models.Carts
@model Cart

@if (Model != null && Model.Items.Any())
{
    <div class="row">
        <div class="col-8">
            @foreach(var item in Model.Items)
            {
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@item.Product.ImagePath" class="img-fluid rounded-start" alt="@item.Product.Name">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-8">
                                        <h3 class="card-title">@item.Product.Name</h3>
                                        <div class="row">
                                            <div class="col-2">
                                                <a class="btn btn-outline-cartChangeAmount" asp-controller="carts" asp-action="changeProductAmount" asp-route-userId="@Model.UserId" asp-route-cartItemId="@item.Id" asp-route-difference="-1" role="button" style="font-size:20px;">-</a>
                                            </div>
                                            <div class="col-2 pt-2">
                                                <p>x <b>@item.Amount</b></p>
                                            </div>
                                            <div class="col-2">
                                                <a class="btn btn-outline-cartChangeAmount" asp-controller="carts" asp-action="changeProductAmount" asp-route-userId="@Model.UserId" asp-route-cartItemId="@item.Id" asp-route-difference="1" role="button" style="font-size:20px">+</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <p>Стоимость:</p>
                                        <p><b>@item.Cost</b> руб.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Оплата</h2>
                    <p class="card-text">Итого: @Model.Cost руб.</p>
                    <a asp-controller="orders" asp-action="index" asp-route-userId="@Model.UserId" class="btn btn-outline-dark" role="button">Продолжить</a>
                    <a asp-controller="carts" asp-action="clearCart" asp-route-userId="1" class="btn btn-outline-danger" role="button">Очистить корзину</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h3>Корзина пуста</h3>
}
