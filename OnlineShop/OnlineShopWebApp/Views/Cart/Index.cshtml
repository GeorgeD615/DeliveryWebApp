@model Dictionary<Product, int>

@if(Model.Count != 0)
{
    foreach(var product in Model)
    {
        <div class="row">
            <div class="col-5">
                <img class="img-fluid" src="~/khinkali.jpg" alt="Изображение товара" />
            </div>
            <div class="col-7">
                <h5>@product.Key.Name</h5>
                <h5>@product.Key.Cost руб.</h5>
                <h5>Количество товара в позиции: @product.Value</h5>
            </div>
        </div>
    }
    <p>Итоговая сумма: @Model.Sum(product => product.Key.Cost * product.Value)</p>
    <a class="btn btn-dark" href="#" role="button">Оформить заказ</a>
}
else
{
    <h3>Корзина пуста</h3>
}
