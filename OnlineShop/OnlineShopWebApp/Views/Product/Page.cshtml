                                                <path fill="currentColor" d="M28.027,34.868c2.25-15.669,15.69-27.723,31.98-27.723c16.291,0,29.732,12.055,31.982,27.723c0.328,5.35,7.22,4.494,7.22,0
						            C96.915,15.24,80.253,0,60.008,0c-20.244,0-36.907,15.24-39.2,34.868C20.807,40.433,28.115,40.647,28.027,34.868z"></path>
                                </svg>
                            </a>
                            <a asp-controller="favorites" asp-action="addFavorite" asp-route-userId="1" asp-route-productId="@product.Id" class="btn btn-outline-addFavorite mt-1" role="button">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"><path fill="currentColor" d="M7 5a4 4 0 0 0-4 4c0 3.552 2.218 6.296 4.621 8.22A21.5 21.5 0 0 0 12 19.91a21.6 21.6 0 0 0 4.377-2.69C18.78 15.294 21 12.551 21 9a4 4 0 0 0-4-4c-1.957 0-3.652 1.396-4.02 3.2a1 1 0 0 1-1.96 0C10.652 6.396 8.957 5 7 5m5 17c-.316-.02-.56-.147-.848-.278a23.5 23.5 0 0 1-4.781-2.942C3.777 16.705 1 13.449 1 9a6 6 0 0 1 6-6 6.18 6.18 0 0 1 5 2.568A6.18 6.18 0 0 1 17 3a6 6 0 0 1 6 6c0 4.448-2.78 7.705-5.375 9.78a23.6 23.6 0 0 1-4.78 2.942c-.543.249-.732.278-.845.278"></path></svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if(Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="product" asp-action="page" asp-route-numberOfProductsPerPage="@Model.NumOfProdPerPage" asp-route-pageNumber="@(Model.PageNumber-1)">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= Model.AmountOfPages; ++i)
            {
                @if(i != Model.PageNumber)
                {
                    <li class="page-item"><a class="page-link" asp-controller="product" asp-action="page" asp-route-numberOfProductsPerPage="@Model.NumOfProdPerPage" asp-route-pageNumber="@i">@i</a></li> 
                }
                else
                {
                    <li class="page-item active"><a class="page-link" asp-controller="product" asp-action="page" asp-route-numberOfProductsPerPage="@Model.NumOfProdPerPage" asp-route-pageNumber="@i">@i</a></li>
                }
            }
            @if(Model.PageNumber < Model.AmountOfPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="product" asp-action="page" asp-route-numberOfProductsPerPage="@Model.NumOfProdPerPage" asp-route-pageNumber="@(Model.PageNumber+1)">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <h2>Упс..., что-то пошло не так</h2>
}




