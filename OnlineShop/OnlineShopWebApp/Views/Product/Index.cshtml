@using OnlineShopWebApp.Models.Products
@model Product
@if(Model != null)
{
    <div class="row">
        <div class="col-4">
            <img class="img-fluid img-thumbnail" src="@Model.ImagePath" alt="Изображение товара" />
        </div>
        <div class="col-3">
            <h2>@Model.Name</h2>
            <h5>@Model.Description</h5>
            <div class="row">
                <div class="col-5 ml-1">
                    <a asp-controller="carts" asp-action="addProduct" asp-route-userId="1" asp-route-productId="@Model.Id" class="btn btn-outline-cartChangeAmount" role="button">
                        @await Html.PartialAsync("AddToCartIcon") @Model.Cost руб.
                    </a>
                </div>
                <div class="col-6 p-0">
                    <a asp-controller="favorites" asp-action="addFavorite" asp-route-userId="1" asp-route-productId="@Model.Id" class="btn btn-outline-addFavorite" role="button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"><path fill="currentColor" d="M7 5a4 4 0 0 0-4 4c0 3.552 2.218 6.296 4.621 8.22A21.5 21.5 0 0 0 12 19.91a21.6 21.6 0 0 0 4.377-2.69C18.78 15.294 21 12.551 21 9a4 4 0 0 0-4-4c-1.957 0-3.652 1.396-4.02 3.2a1 1 0 0 1-1.96 0C10.652 6.396 8.957 5 7 5m5 17c-.316-.02-.56-.147-.848-.278a23.5 23.5 0 0 1-4.781-2.942C3.777 16.705 1 13.449 1 9a6 6 0 0 1 6-6 6.18 6.18 0 0 1 5 2.568A6.18 6.18 0 0 1 17 3a6 6 0 0 1 6 6c0 4.448-2.78 7.705-5.375 9.78a23.6 23.6 0 0 1-4.78 2.942c-.543.249-.732.278-.845.278"></path></svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-10">
            
        </div>
        <div class="col-2">
            <a asp-controller="product" asp-action="page" asp-route-numberOfProductsPerPage="10" asp-route-pageNumber="1" class="btn btn-outline-dark" role="button">Вернуться на главную</a>
        </div>
    </div>
}
else
{
    <h2>Упс..., что-то пошло не так</h2>
}
