@using OnlineShopWebApp.Models.Products
@model List<Product>

<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a asp-controller="administration" asp-action="orders" class="nav-link">Заказы</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="true">Товары</a>
            </li>
            <li class="nav-item">
                <a asp-controller="administration" asp-action="users" class="nav-link">Пользователи</a>
            </li>
            <li class="nav-item">
                <a asp-controller="administration" asp-action="roles" class="nav-link">Роли</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="text-start">
            <a class="btn btn-outline-cartChangeAmount" asp-controller="administration" asp-action="addProduct">Добавить товар</a>
        </div>
        @if (Model != null)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Фото</th>
                        <th scope="col">Название</th>
                        <th scope="col">Цена</th>
                        <th scope="col">Описание</th>
                        <th class="text-center" scope="col">Редактировать</th>
                        <th class="text-center" scope="col">Удалить</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td scope="row">@product.Id</td>
                            <td>
                                <img width="200" src="@product.ImagePath">
                            </td>
                            <td>
                                <a class="link-color" asp-controller="product" asp-action="index" asp-route-productId="@product.Id">
                                    @product.Name
                                </a>
                            </td>
                            <td>@product.Cost</td>
                            <td>@product.Description</td>
                            <td class="text-center">
                                <a asp-controller="administration" asp-action="editProduct" asp-route-productId="@product.Id">
                                    <img width="25" src="~/images/ui/pencil_icon.png">
                                </a>
                            </td>
                            <td class="text-center">
                                <a asp-controller="administration" asp-action="deleteProduct" asp-route-productId="@product.Id">
                                    <img width="25" src="~/images/ui/delete_icon.png">
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h2>В вашем магазине пока нет товаров</h2>
        }
    </div>
</div>
